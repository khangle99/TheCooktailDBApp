<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drink"
            type="com.khangle.domain.model.Drink" />
        <variable
            name="quote"
            type="com.khangle.domain.model.Quote" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Home"
                android:layout_margin="10dp"
                android:gravity="start" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_search"
                android:text="Drink of the day "
                android:layout_margin="10dp"
                android:gravity="start" />

            <include
                layout="@layout/drink_compat"
                android:id="@+id/compatDrink"
                app:drink="@{drink}" />
            
            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/search_navigate"
                app:cornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_search"
                android:textSize="20sp"
                android:text="Search Drink" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    android:id="@+id/alcoholic_navigate"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_alcoholic"
                    android:textSize="14sp"
                    android:text="Alcoholic" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/category_navigate"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_category"
                    android:textSize="14sp"
                    android:text="Category" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:gravity="center_horizontal"
                        android:text="Quote"/>
                    <TextView
                        tools:text="Quote"
                        android:text="@{quote.text}"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textStyle="italic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</layout>